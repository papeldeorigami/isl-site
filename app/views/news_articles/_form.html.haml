= form_for @news_article do |f|
  - if @news_article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@news_article.errors.count, "error")} prohibited this news_article from being saved:"
      %ul
        - @news_article.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :headline
    = f.text_field :headline
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :author
    = f.text_field :author
  .actions
    = f.submit 'Save'
